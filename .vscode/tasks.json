{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "go build -ldflags=\"-w -s\""
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "chokidar \"*.go\" --run-on-start --debounce 1000 -c \"pkill wg-proxer ; pkill go ; go build && wg-proxer wg0.conf\""
        }
    ]
}